{
    "id": "http://json-schema.org/geo",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Tweets",
    "description": "Airline tweet sentiments",
    "type": "object",
    "properties": {
        "tweet_id": {
            "description": "The tweet id",
            "type": "number"
        },
        "airline_sentiment": {
            "description": "How the tweet feels about the airline",
            "type": "string"
        },
        "negativereason": {
            "description": "Why the tweet is negative",
            "type": "string"
        },
        "airline": {
            "description": "The name of the airline",
            "type": "string"
        },
        "name": {
            "description": "Name of the person who made the tweet",
            "type": "string"
        },
        "retweet_count": {
            "description": "Number of retweets",
            "type": "number",
            "minimum": 0
        },
        "text": {
            "description": "Contents of the tweet",
            "type": "string"
        }
    },
    "required": ["tweet_id", "airline_sentiment", "negativereason", "airline", "name", "retweet_count", "text"]
}